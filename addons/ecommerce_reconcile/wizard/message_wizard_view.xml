<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="message_wiz_form1" model="ir.ui.view">
		<field name="name">message.wiz</field>
		<field name="model">message.wiz</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Message" version="7.0">
				<separator string="Message" colspan="6"/>
				<field name="text" colspan="4" nolabel="1"/>
				<newline/>
				<separator colspan="6"/>
				<footer>
					<button special="cancel" class="oe_highlight" string="Close" />
				</footer>
			</form>
		</field>
    </record>
</odoo>
